{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "lib-src",
    "outDir": "lib",
    "baseUrl": "lib-src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "lib-src/**/*.ts"
  ],
  "types": [
    "node"
  ]
}